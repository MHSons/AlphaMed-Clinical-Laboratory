<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Technician - Alpha Med Lab</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Technician</h1>
    <p>Welcome, <%= user.username %> | <a href="/logout">Logout</a></p>

    <section>
      <h2>Pending Tests</h2>
      <table>
        <tr><th>Order</th><th>Patient</th><th>Test</th><th>Parameter</th><th>Normal</th><th>Result</th><th>Action</th></tr>
        <% orders.forEach(o=>{ %>
          <tr>
            <td><%= o.order_code %></td>
            <td><%= o.patient_name %> (<%= o.patient_code %>)</td>
            <td><%= o.test_name %></td>
            <td><%= o.parameter %></td>
            <td><%= o.normal_min %> - <%= o.normal_max %> <%= o.unit %></td>
            <td><%= o.result_value || '' %></td>
            <td>
              <form method="post" action="/technician/result/<%= o.order_id %>">
                <input name="result_value" placeholder="Result value" required>
                <select name="status">
                  <option value="completed">completed</option>
                  <option value="inprogress">inprogress</option>
                  <option value="canceled">canceled</option>
                </select>
                <button type="submit">Save</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>
  </div>
</body>
</html>
