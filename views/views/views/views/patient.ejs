<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Patient - <%= patient.name %></title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Patient: <%= patient.name %></h1>
    <p>Code: <%= patient.patient_code %> | DOB: <%= patient.dob %> | Phone: <%= patient.phone %></p>
    <a href="/login">Staff Login</a>
    <h2>Tests & Results</h2>
    <table>
      <tr><th>Order</th><th>Test</th><th>Result</th><th>Flag</th><th>Normal Range</th><th>Date</th></tr>
      <% orders.forEach(o=>{ %>
        <tr>
          <td><%= o.order_code %></td>
          <td><%= o.test_name %></td>
          <td><%= o.result_value || 'N/A' %></td>
          <td><%= o.result_flag || o.status %></td>
          <td><%= o.normal_min %> - <%= o.normal_max %> <%= o.unit %></td>
          <td><%= o.created_at %></td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
