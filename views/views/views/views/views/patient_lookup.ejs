<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Patient Lookup</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <div class="box">
    <h1>Patient Report Lookup</h1>
    <% if(error){ %><p class="error"><%= error %></p><% } %>
    <form method="post" action="/patient/view">
      <input name="patient_code" placeholder="Enter patient code" required>
      <button type="submit">View</button>
    </form>
  </div>
</body>
</html>
