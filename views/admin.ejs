<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Alpha Med Lab</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Admin Dashboard</h1>
    <p>Welcome, <%= user.username %> | <a href="/logout">Logout</a></p>

    <section>
      <h2>Departments (summary)</h2>
      <table>
        <tr><th>#</th><th>Name</th><th>Tests</th></tr>
        <% departments.forEach(d=>{ %>
          <tr><td><%= d.id %></td><td><%= d.name %></td><td><%= d.tests_count %></td></tr>
        <% }) %>
      </table>
    </section>

    <section>
      <h2>Users</h2>
      <table>
        <tr><th>ID</th><th>Username</th><th>Role</th></tr>
        <% users.forEach(u=>{ %>
          <tr><td><%= u.id %></td><td><%= u.username %></td><td><%= u.role %></td></tr>
        <% }) %>
      </table>

      <h3>Add User</h3>
      <form method="post" action="/admin/users">
        <input name="username" placeholder="username" required>
        <input name="password" placeholder="password" required>
        <select name="role">
          <option value="admin">admin</option>
          <option value="reception">reception</option>
          <option value="technician">technician</option>
        </select>
        <button type="submit">Add</button>
      </form>
    </section>

  </div>
</body>
</html>
